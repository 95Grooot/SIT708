<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â† Assessments by AI"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Results"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Results List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tv_question_1_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Question 1\nResponse from the model that you're doing"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/result_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_question_2_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Question 2\nResponse from the model that you're doing"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/result_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_question_3_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Question 3\nResponse from the model that you're doing"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/result_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_overall_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great job! You've completed all questions successfully."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/feedback_background"
            android:padding="16dp"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>