<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.LostAndFoundManager" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- BLUE BACK BUTTON: White ActionBar with blue icons -->
        <item name="actionBarStyle">@style/Widget.LostAndFound.ActionBar.Light</item>
        <item name="actionBarTheme">@style/ThemeOverlay.LostAndFound.ActionBar.Light</item>

        <!-- BLUE navigation icon (back button) -->
        <item name="colorControlNormal">@color/primary_color</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.LostAndFound.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.LostAndFound.Button.Outlined</item>

        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.LostAndFound.CardView</item>

        <!-- Text Input Layout style -->
        <item name="textInputStyle">@style/Widget.LostAndFound.TextInputLayout</item>
    </style>

    <!-- WHITE ActionBar with BLUE text and icons -->
    <style name="Widget.LostAndFound.ActionBar.Light" parent="Widget.Material3.ActionBar.Solid">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/primary_color</item>
        <item name="subtitleTextColor">@color/primary_color</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- ActionBar Theme Overlay for BLUE controls -->
    <style name="ThemeOverlay.LostAndFound.ActionBar.Light" parent="ThemeOverlay.Material3.ActionBar">
        <item name="android:textColorPrimary">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/primary_color</item>
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorOnSurface">@color/primary_color</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.LostAndFound.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_color</item>
    </style>

    <style name="Widget.LostAndFound.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.LostAndFound.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="Widget.LostAndFound.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
    </style>
</resources>