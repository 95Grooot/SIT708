<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.LlamaChatBot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_green</item>
        <item name="colorSecondaryVariant">@color/button_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_blue</item>

        <!-- Additional Material Design colors for night mode -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/purple_200</item>
        <item name="colorOnError">@color/black</item>
    </style>
</resources>